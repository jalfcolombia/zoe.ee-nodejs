  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via TSNodeDev",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}",
      // "console": "integratedTerminal",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceRoot}/src/app.ts"
      ],
      "restart": true,
      "outputCapture": "std"
    }
  ]
}
